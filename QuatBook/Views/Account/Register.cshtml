@model QuatBook.Dto.RegisterDTO
@{
	ViewData["Title"] = "Register";
	Layout = "_LayoutCustomer";
}
<!-- breadcrumbs-area-start -->
<div class="breadcrumbs-area mb-70">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="breadcrumbs-menu">
					<ul>
						<li><a href="#">Home</a></li>
						<li><a href="#" class="active">register</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- breadcrumbs-area-end -->
<!-- user-login-area-start -->
<!-- user-login-area-start -->
<div class="user-login-area mb-70">
    <div class="container">
        <form asp-action="Register" asp-controller="Account" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="login-title text-center mb-30">
                        <h2>Đăng ký</h2>
                        <p>doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo<br>inventore veritatis et quasi architecto beat</p>
                    </div>
                </div>
                <div class="offset-lg-2 col-lg-8 col-md-12 col-12">
                    <div class="billing-fields">
                        <div class="single-register">
                            <label>Tài khoản<span>*</span></label>
                            <input asp-for="@Model.Username" placeholder="Nhập tên người dùng" class="form-control" required />
                            <span asp-validation-for="@Model.Username" class="text-danger"></span>
                        </div>
                        <div class="single-register">
                            <label>Mật khẩu<span>*</span></label>
                            <input asp-for="@Model.Password" placeholder="Nhập mật khẩu" class="form-control" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="single-register">
                                    <label>Email<span>*</span></label>
                                    <input asp-for="@Model.Email" placeholder="Nhập email" class="form-control" />
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="single-register">
                                    <label>Số điện thoại<span>*</span></label>
                                    <input asp-for="@Model.Phone" placeholder="Nhập số điện thoại" class="form-control" />
                                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="single-register">
                                    <label>Ngày sinh<span>*</span></label>
                                    <input asp-for="@Model.Birth" class="form-control" />
                                    <span asp-validation-for="@Model.Birth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="single-register">
                                <label>Gender<span>*</span></label>
                                <div style="display: flex; align-items: center; gap: 15px;">
                                    <label style="display: flex; align-items: center; gap: 5px;">
                                        <input asp-for="@Model.Gender" type="radio" value="true"> Male
                                    </label>
                                    <label style="display: flex; align-items: center; gap: 5px;">
                                        <input asp-for="@Model.Gender" type="radio" value="false"> Female
                                    </label>
                                    <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="single-register">
                            <label>Địa chỉ<span>*</span></label>
                            <input asp-for="@Model.Address" placeholder="Nhập địa chỉ" class="form-control" />
                            <span asp-validation-for="@Model.Address" class="text-danger"></span>
                        </div>
                        <div class="single-register single-register-3">
                            <input id="rememberme" type="checkbox" name="rememberme" value="forever">
                            <label class="inline">Tôi đồng ý với <a href="#">Điều khoản & Điều kiện</a></label>
                        </div>
                        <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                            <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng ký</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- user-login-area-end -->
<!-- user-login-area-end -->
