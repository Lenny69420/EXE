	<script>
		document.addEventListener('DOMContentLoaded', function () {
			var popupMessage = "@Html.Raw(TempData["PopupMessage"])";
			var popupType = '@TempData["PopupType"]';

			if (popupMessage.trim()) {
				Swal.fire({
					title: popupType === 'success' ? 'Thành công!' : 'Lỗi!',
					html: popupMessage, // Dùng `html` thay vì `text`
					icon: popupType,
					confirmButtonText: popupType === 'success' ? 'Tiếp tục mua sắm' : 'Thử lại',
					showCancelButton: popupType === 'error',
					cancelButtonText: 'Quay lại cửa hàng',
					customClass: {
						confirmButton: popupType === 'success' ? 'btn btn-primary' : 'btn btn-warning',
						cancelButton: 'btn btn-secondary'
					},
					buttonsStyling: false
				}).then((result) => {
					if (popupType === 'error') {
						if (result.isConfirmed) {
							window.location.href = '@Url.Action("Checkout", "Cart")'; // Thử lại
						} else if (result.dismiss === Swal.DismissReason.cancel) {
							window.location.href = '@Url.Action("Index", "Product")'; // Quay lại cửa hàng
						}
					}
				});
			}
		});
	</script>


