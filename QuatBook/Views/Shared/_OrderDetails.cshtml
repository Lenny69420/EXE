@model QuatBook.Models.Order

<div class="container">
    <h4 class="text-primary mb-3">Order #@Model.OrderId</h4>
    <div class="row">
        <div class="col-md-6">
            <p><strong>Customer:</strong> @(Model.Account?.Username ?? "N/A")</p>
            <p><strong>Total Amount:</strong> @Model.Ammount?.ToString("C")</p>
            <p>
                <strong>Payment Method:</strong>
                <span class="badge @(Model.PaymentMethod == "VNPAY" ? "bg-success" : "bg-warning")">
                    @Model.PaymentMethod
                </span>
            </p>
        </div>
        <div class="col-md-6">
            <p>
                <strong>Status:</strong>
                <span class="badge @(Model.Status == "Paid" ? "bg-success" : Model.Status == "Pending" ? "bg-warning" : "bg-danger")">
                    @Model.Status
                </span>
            </p>
            <p><strong>Created Date:</strong> @Model.CreateTime?.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
    </div>

    <h5 class="mt-4">Order Items</h5>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Image</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.OrderDetails)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(detail.Product?.Image))
                            {
                                <img src="~/img/product/@detail.Product.Image" alt="@detail.Product.BookName" style="width: 50px; height: 50px; object-fit: cover;" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>@(detail.Product?.BookName ?? "N/A")</td>
                        <td>@detail.Quantity</td>
                        <td>@detail.Product?.Price?.ToString("C")</td>
                        <td>@((detail.Product?.Price * detail.Quantity)?.ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>