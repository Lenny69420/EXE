                            <tr>
                                <th>BookId</th>
                                <th>BookName</th>
                                <th>Image</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Description</th>
                                <th>Created</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BookId</td>
                                    <td>@item.BookName</td>
                                    <td>
                                        <img src="~/img/product/@item.Image" alt="@item.BookName" class="img-thumbnail" style="width: 80px; height: 120px; object-fit: cover;">
                                    </td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price</td>
                                    <td>@item.Description</td>
                                    <td>@item.Created</td>
                                    <td>@item.Author.AuthorName</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="#" class="btn btn-warning btn-sm" data-toggle="modal"
                                               data-target="#editModal" onclick="loadEditModal(@item.BookId)">
                                                <i class="fas fa-edit"></i> Update
                                            </a>
                                            <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.BookId"
                                               class="btn btn-danger btn-sm"
                                               onclick="return confirm('Do you want to delete book: @item.BookName');">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </a>
                                            <!-- Nút Toggle Active -->
                                            <button class="btn btn-sm @(item.active == true ? "btn-success" : "btn-secondary") toggle-active"
                                                    data-id="@item.BookId"
                                                    onclick="toggleActive(@item.BookId, this)">
                                                <i class="fas fa-power-off"></i> @(item.active == true ? "Active" : "Inactive")
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted text-center">
                Last updated at @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
            </div>
        </div>

        <!-- Thay thế modal bằng partial view -->
        @await Html.PartialAsync("_AddProductModal")
        @await Html.PartialAsync("_EditProductModal", new QuatBook.Models.Product())

    </div> <!-- Đóng container-fluid -->
</div> <!-- Đóng content-wrapper -->
<!-- Scripts -->
<script>
    function loadEditModal(bookId) {
        $.ajax({
            url: '/Product/Edit/' + bookId,
            type: 'GET',
            success: function (data) {
                // Cập nhật nội dung bên trong modal
                $('#editModal .modal-content').html($(data).find('.modal-content').html());
                $('#editModal').modal('show'); // Hiển thị modal
            },
            error: function (xhr, status, error) {
                console.log('Error: ' + error);
                alert('Error loading edit form');
            }
        });
    }

    // Toggle Active function
    function toggleActive(bookId, button) {
        $.ajax({
            url: '/Product/ToggleActive',
            type: 'POST',
            data: { id: bookId },
            success: function (response) {
                if (response.success) {
                    if (response.active === true) {
                        $(button).removeClass('btn-secondary').addClass('btn-success');
                        $(button).html('<i class="fas fa-power-off"></i> Active');
                    } else {
                        $(button).removeClass('btn-success').addClass('btn-secondary');
                        $(button).html('<i class="fas fa-power-off"></i> Inactive');
                    }
                } else {
                    alert(response.message);
                }
            },
            error: function (xhr, status, error) {
                console.log('Error: ' + error);
                alert('Error toggling product status');
            }
        });
    }

    // Xử lý khi modal đóng để đảm bảo backdrop được xóa
    $(document).ready(function () {
        $('#editModal').on('hidden.bs.modal', function () {
            // Xóa backdrop thủ công
            $('.modal-backdrop').remove();
            // Đặt lại nội dung modal để tránh lỗi khi mở lại
            $('#editModal .modal-content').html('');
        });
    });
</script>

<!-- Keep modal open if validation fails for Add -->
@if (!ViewData.ModelState.IsValid)
{
    <script>
        $(document).ready(function () {
            $('#addModal').modal('show');
        });
    </script>
}

