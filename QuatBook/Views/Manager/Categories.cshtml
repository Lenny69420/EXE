@model List<QuatBook.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
    Layout = "_LayoutManager";
}

<div class="container-fluid mt-4">
    <!-- Breadcrumbs -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Manager/Shop">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Categories</li>
    </ol>

    <!-- Tiêu đề -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-4 text-primary">Manage Categories</h2>
        <a href="#" class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#createCategoryModal">
            <i class="fas fa-plus me-2"></i>Thêm danh mục
        </a>
    </div>

    <!-- Thông báo -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No categories found.
        </div>
    }
    else
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-table me-2"></i>
                Category List
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Tên danh mục</th>
                                <th>Mô tả</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tfoot class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Tên danh mục</th>
                                <th>Mô tả</th>
                                <th>Hành động</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>#@category.CategoryId</td>
                                    <td>@category.CategoryName</td>
                                    <td>@category.CategoryDescription</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="#" class="btn btn-info btn-sm edit-category"
                                               data-id="@category.CategoryId"
                                               data-bs-toggle="modal"
                                               data-bs-target="#editCategoryModal">
                                                <i class="fas fa-edit me-1"></i>Sửa
                                            </a>
                                            <a href="@Url.Action("DeleteCategory", new { id = category.CategoryId })"
                                               class="btn btn-danger btn-sm"
                                               onclick="return confirm('Bạn có chắc muốn xóa danh mục này?');">
                                                <i class="fas fa-trash-alt me-1"></i>Xóa
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted text-center">
                Last updated at @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
            </div>
        </div>
    }
</div>

<!-- Modal để thêm danh mục -->
<div class="modal fade" id="createCategoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg" id="createCategoryModalContent">
            <!-- Nội dung modal sẽ được load từ PartialView -->
        </div>
    </div>
</div>

<!-- Modal để sửa danh mục -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg" id="editCategoryModalContent">
            <!-- Nội dung modal sẽ được load từ PartialView -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Load form thêm danh mục
            $('#createCategoryModal').on('show.bs.modal', function () {
                $.ajax({
                    url: '@Url.Action("CreateCategory", "Manager")',
                    method: 'GET',
                    success: function (data) {
                        $('#createCategoryModalContent').html(data);
                    },
                    error: function (xhr, status, error) {
                        console.error('Lỗi tải form thêm danh mục:', error);
                        alert('Không thể tải form thêm danh mục.');
                    }
                });
            });

            // Load form sửa danh mục
            $('.edit-category').on('click', function (e) {
                e.preventDefault();
                var categoryId = $(this).data('id');
                $.ajax({
                    url: '@Url.Action("EditCategory", "Manager")/' + categoryId,
                    method: 'GET',
                    success: function (data) {
                        $('#editCategoryModalContent').html(data);
                        $('#editCategoryModal').modal('show');
                    },
                    error: function (xhr, status, error) {
                        console.error('Lỗi tải form sửa danh mục:', error);
                        alert('Không thể tải form chỉnh sửa danh mục.');
                    }
                });
            });
        });
    </script>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>