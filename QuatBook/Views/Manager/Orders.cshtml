@model List<QuatBook.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
    Layout = "_LayoutManager";
}

<div class="container-fluid mt-4">
    <!-- Breadcrumbs -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Manager/Shop">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Orders</li>
    </ol>
    <h2 class="mb-4 text-primary">Manage Orders</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            No orders found.
        </div>
    }
    else
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-table me-2"></i>
                Order List
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="table-dark">
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Total Amount</th>
                                <th>Payment Method</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot class="table-dark">
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Total Amount</th>
                                <th>Payment Method</th>
                                <th>Status</th>
                                <th>Created Date</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>#@order.OrderId</td>
                                    <td>@(order.Account?.Username ?? "N/A")</td>
                                    <td>@order.Ammount?.ToString("C")</td>
                                    <td>
                                        <span class="badge @(order.PaymentMethod == "VNPAY" ? "bg-success" : "bg-warning")">
                                            @order.PaymentMethod
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(order.Status == "Paid" ? "bg-success" : order.Status == "Pending" ? "bg-warning" : "bg-danger")">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>@order.CreateTime?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-info btn-sm" onclick="showOrderDetails(@order.OrderId)">
                                                <i class="fas fa-eye"></i> View Details
                                            </button>
                                            @if (Context.Session.GetInt32("RoleId") == 1) // Chỉ Admin mới có quyền xóa
                                            {
                                                <a asp-action="DeleteOrder" asp-controller="Manager" asp-route-id="@order.OrderId"
                                                   class="btn btn-danger btn-sm"
                                                   onclick="return confirm('Do you want to delete order #@order.OrderId?');">
                                                    <i class="fas fa-trash-alt"></i> Delete
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted text-center">
                Last updated at @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
            </div>
        </div>

        <!-- Modal để hiển thị chi tiết đơn hàng -->
        <div class="modal fade" id="orderDetailsModal" tabindex="-1" aria-labelledby="orderDetailsModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="orderDetailsModalLabel">Order Details</h5>
                        <button type="button" class="btn-close btn-close-white" data-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="orderDetailsContent">
                        <!-- Nội dung chi tiết sẽ được load bằng AJAX -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    
    <script>
    

        function showOrderDetails(orderId) {
            $.ajax({
                url: '/Manager/OrderDetails',
                type: 'GET',
                data: { orderId: orderId },
                success: function (data) {
                    $('#orderDetailsContent').html(data);
                    $('#orderDetailsModal').modal('show');
                },
                error: function () {
                    alert('Error loading order details.');
                }
            });
        }
    </script>
}